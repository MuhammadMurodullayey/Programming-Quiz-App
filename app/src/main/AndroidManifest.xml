<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quiz">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon___"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quiz">
        <activity
            android:screenOrientation="portrait"
            android:name="uz.gita.myquizappp.InfoActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name="uz.gita.myquizappp.TestActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name="uz.gita.myquizappp.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uz.gita.myquizappp.Result_Activity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:screenOrientation="portrait"
            android:name="uz.gita.myquizappp.FistActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>